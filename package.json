    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "http-errors": "^1.7.2",
    "serverless": "^1.40.0",
    "serverless-iam-roles-per-function": "^1.0.4",
    "serverless-plugin-dynamodb": "^1.2.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "chai": "^4.2.0",
    "glob": "^7.1.3",
    "middy": "^0.24.0",
    "mocha": "^6.1.3",
    "randomstring": "^1.1.5"
  },
  "scripts": {
    "test:local": "mocha ./test/units",
    "test:remote": "serverless invoke -f test",
    "test:remote:log": "serverless logs -f test",
    "lint": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "deploy": "serverless deploy",
    "remove": "serverless remove",
    "check:syntax": "node googleHome/fulfillment.js && node auth/auth.js && node auth/token.js && node auth/authorizer.js && node alexa/fulfillment.js",
    "auth:log": "serverless logs -f auth",
    "auth:log:watch": "serverless logs -f auth -t",
    "token:log": "serverless logs -f token",
    "token:log:watch": "serverless logs -f token -t",
    "authorizer:log": "serverless logs -f authorizer",
    "authorizer:log:watch": "serverless logs -f authorizer -t",
    "googleHome:log": "serverless logs -f googleHome",
    "googleHome:log:watch": "serverless logs -f googleHome -t",
    "googleHomeResync:log": "serverless logs -f googleHomeResync",
    "googleHomeResync:log:watch": "serverless logs -f googleHomeResync -t",
    "googleHomeResync:execute": "serverless invoke -f googleHomeResync",
    "alexa:log": "serverless logs -f alexa",
    "alexa:log:watch": "serverless logs -f alexa -t"
  }
